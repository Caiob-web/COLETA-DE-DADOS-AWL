{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js",   "use": "@vercel/node"   },
    { "src": "public/**/*",   "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/enviar",
      "dest": "/api/enviar.js"
    },
    {
      "src": "/enviar",
      "dest": "/api/enviar.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
